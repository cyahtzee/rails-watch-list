<%= render 'components/banner' %>
<div class="container">
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://i.ytimg.com/vi/vO2z4H36ObE/maxresdefault.jpg)">
      <%= link_to new_list_bookmark_path(list), class: "card-add-link" do %>
      <i class="far fa-bookmark"></i>
      <% end %>
      <%= link_to list_path(list), class: 'card-remove-link' do %>
      <%= list.name %>
      <% end %>
      </div>
    <% end %>
  </div>
</div>
